package pesquisa;

public class Pessoa {

	String nome;
	String sobrenome;
	int idade;

	//Construtor Vazio
	Pessoa() {}

	//Construtor Cheio
	Pessoa(String n, String sn, int id) {
		nome = n;
		sobrenome = sn;
		idade = id;
	}

	public String fasedavida() {
		if (idade <= 10) 
			return "CrianÃ§a";
		 else if (idade < 25) 
			return "Jovem";
		 else if (idade < 60) 
			return "Adulto";
		 else
			 return "Idoso";
	}
	
}
