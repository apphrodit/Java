package programa;

public class Paciente {
	
	String nome;
	float peso;
	float altura;
	

	public float imc () {
		return peso / (altura * altura);
	}
	public String diagnostico(){
		if (imc() < 16){
			return "Subpeso Severo.";
		}else if (imc() < 20){
			return "Subpeso.";
		}else if(imc() < 25){
			return "Normal.";
		}else if(imc() < 30){
			return "Sobre Peso.";
		}else if(imc() < 40){
			return "Obeso.";
		}
		else {	
			return "Obeso MÃ³rbido.";
		}
	}
	public String toString() {
		return String.format("%s\t%.2f\t%.2f\t%.2f\t%s",nome, peso, altura, imc(), diagnostico());
	}
}
