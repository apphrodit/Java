package exemplos;

import java.io.BufferedWriter;
import java.io.FileWriter;
import java.io.IOException;
import java.util.Random;

public class Main1 {

	public static void main(String[] args) {
		Random r = new Random();
		String aluno[] = {"Paulo", "Jo√£ozinho", "Aninha", "Flavinha"};
		float prova = 10f;
		float trabalho = 10f;
		float atividades = 10;
		float media = (prova + trabalho + atividades) / 3;
		String saida = String.format("%s;%.1f;%.1f;%.1f;%.1f\r\n",aluno, prova, trabalho, atividades, media);
		
		try {
			BufferedWriter bw = new BufferedWriter(new FileWriter("./bd/Notas.csv"));
			bw.write(saida);
			bw.close();
			System.out.println("Arquivo criado com sucesso.");
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

}
